{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Learned Heuristic Object (LHO)",
  "description": "A learned rule that prevents future errors by encoding corrective strategies",
  "type": "object",
  "required": ["lho_id", "title", "trigger_pattern", "correction_strategy", "priority", "created_at"],
  "properties": {
    "lho_id": {
      "type": "string",
      "pattern": "^LHO-[0-9]{3,}$",
      "description": "Unique identifier (e.g., LHO-001, LHO-042)",
      "examples": ["LHO-001", "LHO-042"]
    },
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100,
      "description": "Human-readable summary of the rule",
      "examples": ["Always use Python tool for CSV parsing"]
    },
    "trigger_pattern": {
      "type": "string",
      "minLength": 10,
      "description": "Condition when this LHO should activate",
      "examples": ["task contains 'CSV' AND tool_options includes 'python_csv'"]
    },
    "correction_strategy": {
      "type": "string",
      "minLength": 20,
      "description": "What to do instead (actionable instruction)",
      "examples": ["Before parsing CSV, call python_csv tool instead of using regex"]
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"],
      "default": "medium"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "faux_pas_source": {
      "type": "string",
      "pattern": "^FP-[0-9]{4}-[0-9]{2}-[0-9]{2}-[0-9]{3}$"
    },
    "success_count": {
      "type": "integer",
      "minimum": 0,
      "default": 0
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "archived": {
      "type": "boolean",
      "default": false
    }
  }
}