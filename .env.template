# AI-OS Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (required for GPT Planner)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Optional: OpenAI Model
# Default: gpt-4o-mini (cheaper, faster)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo
OPENAI_MODEL=gpt-4o-mini

# Optional: Server Port
# Default: 8000
SERVER_PORT=8000

# Optional: Demo Mode
# Set to "true" to always use demo mode (simulated GPT)
# Set to "false" to use real GPT (requires OPENAI_API_KEY)
DEMO_MODE=false

# GitHub Configuration
GITHUB_PAT=
GITHUB_OWNER=edri2or-commits
GITHUB_REPO=ai-os
GITHUB_API_BASE_URL=https://api.github.com
